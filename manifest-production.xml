<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xsi:type="TaskPaneApp">

  <!-- Basic Add-in Information -->
  <Id>8B6B6C3F-8B9A-4A8A-9A8A-8B6B6C3F8B9A</Id>
  <Version>1.0.2</Version>
  <ProviderName>Werx Solutions</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="WACC Calculator" />
  <Description DefaultValue="Modern WACC Calculator with guided input, real-time preview, and Excel integration" />
  <IconUrl DefaultValue="https://mvp-wacc-frontend.vercel.app/assets/images/icon-32.svg" />
  <HighResolutionIconUrl DefaultValue="https://mvp-wacc-frontend.vercel.app/assets/images/icon-80.svg" />
  <SupportUrl DefaultValue="https://github.com/goquantive/werx20-reportwriter" />

  <!-- Office App Capabilities -->
  <AppDomains>
    <AppDomain>https://mvp-wacc-frontend.vercel.app</AppDomain>
  </AppDomains>

  <!-- Host Applications -->
  <Hosts>
    <Host Name="Workbook" />
  </Hosts>

  <!-- Requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="ExcelApi" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <!-- Default Settings -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mvp-wacc-frontend.vercel.app/taskpane.html" />
  </DefaultSettings>

  <!-- Permissions -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <!-- Host Applications -->
    <Hosts>
      <Host xsi:type="Workbook">

        <!-- Desktop form factor -->
        <DesktopFormFactor>

          <!-- Function file for commands -->
          <FunctionFile resid="WACCCalculator.Commands.Url" />

          <!-- Extension point for PrimaryCommandSurface (Ribbon) -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="WACCGroup">
                <Label resid="WACCGroup.Label" />
                <Icon>
                  <bt:Image size="16" resid="WACCCalculator.Icon16" />
                  <bt:Image size="32" resid="WACCCalculator.Icon32" />
                  <bt:Image size="80" resid="WACCCalculator.Icon80" />
                </Icon>

                <!-- Show Task Pane Button -->
                <Control xsi:type="Button" id="ShowTaskPaneButton">
                  <Label resid="ShowTaskPane.Label" />
                  <Supertip>
                    <Title resid="ShowTaskPane.Label" />
                    <Description resid="ShowTaskPane.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="WACCCalculator.Icon16" />
                    <bt:Image size="32" resid="WACCCalculator.Icon32" />
                    <bt:Image size="80" resid="WACCCalculator.Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>WACCCalculatorTaskPane</TaskpaneId>
                    <SourceLocation resid="WACCCalculator.Taskpane.Url" />
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Context menu extension -->
          <ExtensionPoint xsi:type="ContextMenu">
            <OfficeMenu id="ContextMenuWorksheet">
              <Control xsi:type="Button" id="ContextMenuWACC">
                <Label resid="ContextMenu.Label" />
                <Supertip>
                  <Title resid="ContextMenu.Label" />
                  <Description resid="ContextMenu.Tooltip" />
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="WACCCalculator.Icon16" />
                  <bt:Image size="32" resid="WACCCalculator.Icon32" />
                  <bt:Image size="80" resid="WACCCalculator.Icon80" />
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <TaskpaneId>WACCCalculatorTaskPane</TaskpaneId>
                  <SourceLocation resid="WACCCalculator.Taskpane.Url" />
                </Action>
              </Control>
            </OfficeMenu>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="WACCCalculator.Icon16" DefaultValue="https://mvp-wacc-frontend.vercel.app/assets/images/icon-16.svg" />
        <bt:Image id="WACCCalculator.Icon32" DefaultValue="https://mvp-wacc-frontend.vercel.app/assets/images/icon-32.svg" />
        <bt:Image id="WACCCalculator.Icon80" DefaultValue="https://mvp-wacc-frontend.vercel.app/assets/images/icon-80.svg" />
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="WACCCalculator.Taskpane.Url" DefaultValue="https://mvp-wacc-frontend.vercel.app/taskpane.html" />
        <bt:Url id="WACCCalculator.Commands.Url" DefaultValue="https://mvp-wacc-frontend.vercel.app/commands.html" />
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="WACCGroup.Label" DefaultValue="WACC Calculator" />
        <bt:String id="ShowTaskPane.Label" DefaultValue="WACC Calculator" />
        <bt:String id="ContextMenu.Label" DefaultValue="Open WACC Calculator" />
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="ShowTaskPane.Tooltip" DefaultValue="Open the WACC Calculator task pane for guided calculation" />
        <bt:String id="ContextMenu.Tooltip" DefaultValue="Open WACC Calculator to calculate weighted average cost of capital" />
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>